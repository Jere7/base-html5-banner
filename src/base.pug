extends ../src/layout

block content

  - var headerTitle = title;
  - var headerClient = client;
  - var bannerConcept = concepts;
  - var bannerSizes = banners.concept1.sizes[0];

  header
    .logo-wrap
  .container.main
    .col-sm-12
      h2.banner-client= headerClient
      h3.banner-name= headerTitle
      div
        ul.nav.nav-tabs#mytabs(role="tablist")
          each val in bannerConcept
            li(role="tablist")
              a(href=val aria-controls=val role="tab" data-toggle="tab")= val
        .tab-content
          .tab-pane.active#concept1(role="tabpanel")
            .panel-group#accordion(role="tablist" aria-multiselectable="true")
                //- 1
                .panel.panel-default
                    .panel-heading#headingOne(role="tab") 
                        h4.panel-title
                            a(role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne" ).iframeRefresher
                                p= bannerSizes
                    #collapseOne.panel-collapse.collapse(role="tabpanel" aria-labelledby="headingOne")
                      .panel-body
                          iframe(src="./lowes_kobalt_q4_160x600/index.html" name="myiFrame" scrolling="no" frameborder="1" marginheight="0px" marginwidth="0px" height="600" width="160" allowfullscreen).test
                //- 2
                .panel.panel-default
                    .panel-heading#headingTwo(role="tab") 
                        h4.panel-title
                            a(role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo").iframeRefresher
                                | BANNER TEST 300X250
                    #collapseTwo.panel-collapse.collapse(role="tabpanel" aria-labelledby="headingTwo")
                      .panel-body
                          iframe(src="./lowes_kobalt_q4_300x250/index.html" name="myiFrame" scrolling="no" frameborder="1" marginheight="0px" marginwidth="0px" height="250" width="300" allowfullscreen).test

          .tab-pane#concept2(role="tabpanel")
            .panel-group#accordion2(role="tablist" aria-multiselectable="true")
                //- 1
                .panel.panel-default
                    .panel-heading#headingThree(role="tab") 
                        h4.panel-title
                            a(role="button" data-toggle="collapse" data-parent="#accordion2" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree")
                                | BANNER TEST 160x600
                    #collapseThree.panel-collapse.collapse(role="tabpanel" aria-labelledby="headingThree")
                      .panel-body
                          iframe(src="./lowes_kobalt_q4_160x600/index.html" name="myiFrame" scrolling="no" frameborder="1" marginheight="0px" marginwidth="0px" height="600" width="160" allowfullscreen)
                //- 2
                .panel.panel-default
                    .panel-heading#headingFour(role="tab") 
                        h4.panel-title
